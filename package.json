{
  "name": "nodeauth",
  "version": "1.0.0",
  "description": "Authentication microservice",
  "main": "./dist/server.js",
  "scripts": {
    "start": "node ./",
    "build": "tsc -p .",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "play": "nodemon --exec npx ts-node src/server.ts"
  },
  "keywords": [
    "authentication",
    "microservice",
    "jwt",
    "auth"
  ],
